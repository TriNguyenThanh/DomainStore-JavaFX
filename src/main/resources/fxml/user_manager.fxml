<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.*?>
<AnchorPane prefHeight="640.0" prefWidth="1020.0" stylesheets="@../style/subwindow.css"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.utc2.domainstore.controller.UserManagerController">
    <children>
        <BorderPane layoutX="14.0" prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0"
                    AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <top>
                <AnchorPane prefHeight="110.0" prefWidth="999.0" styleClass="pnBackground"
                            BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </BorderPane.margin>
                    <children>
                        <Label alignment="CENTER" layoutX="434.0" layoutY="14.0" styleClass="header" text="%userManager"
                               AnchorPane.bottomAnchor="14.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0"
                               AnchorPane.topAnchor="14.0"/>
                    </children>
                    <effect>
                        <DropShadow/>
                    </effect>
                </AnchorPane>
            </top>
            <center>
                <AnchorPane prefHeight="200.0" prefWidth="200.0" styleClass="pnBackground"
                            BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </BorderPane.margin>
                    <effect>
                        <DropShadow/>
                    </effect>
                    <children>
                        <BorderPane layoutX="14.0" layoutY="20.0" prefHeight="200.0" prefWidth="200.0"
                                    AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0"
                                    AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
                            <right>
                                <VBox alignment="BOTTOM_CENTER" prefHeight="448.0" prefWidth="177.0" spacing="20.0"
                                      BorderPane.alignment="CENTER">
                                    <children>
                                        <Button fx:id="btAdd" mnemonicParsing="false" prefHeight="50.0"
                                                prefWidth="140.0" text="%add" onAction="#onHandleButton"/>
                                        <Button fx:id="btRemove" mnemonicParsing="false" prefHeight="50.0"
                                                prefWidth="140.0" text="%lock" onAction="#onHandleButton"/>
                                        <Button fx:id="btEdit" mnemonicParsing="false" prefHeight="50.0"
                                                prefWidth="140.0" text="%edit" onAction="#onHandleButton"/>
                                    </children>
                                    <BorderPane.margin>
                                        <Insets left="10.0"/>
                                    </BorderPane.margin>
                                </VBox>
                            </right>
                            <center>
                                <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                                    <children>
                                        <TextField fx:id="tfSearch" prefHeight="50.0" promptText="%search"
                                                   AnchorPane.leftAnchor="0.0"
                                                   AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
                                        <TableView fx:id="table" prefHeight="448.0" prefWidth="772.0"
                                                   AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                                   AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="60.0">
                                            <columns>
                                                <TableColumn fx:id="colID" prefWidth="90" text="%id"/>
                                                <TableColumn fx:id="colUsername" prefWidth="200" text="%username"/>
                                                <TableColumn fx:id="colPhone" prefWidth="160" text="%phone"/>
                                                <TableColumn fx:id="colEmail" prefWidth="150" text="%email"/>
                                                <TableColumn fx:id="colPsID" prefWidth="150" text="%personal_id"/>
                                                <TableColumn fx:id="colRole" prefWidth="90" text="%role"/>
                                                <TableColumn fx:id="colStatus" prefWidth="160" text="%status"/>
                                            </columns>
                                        </TableView>
                                    </children>
                                </AnchorPane>
                            </center>
                        </BorderPane>
                    </children>
                </AnchorPane>
            </center>
        </BorderPane>
    </children>
</AnchorPane>
