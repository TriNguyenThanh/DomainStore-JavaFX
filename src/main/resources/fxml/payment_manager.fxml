<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.*?>
<AnchorPane prefHeight="640.0" prefWidth="1020.0" stylesheets="@../style/subwindow.css"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.utc2.domainstore.controller.PaymentManagerController">
    <children>
        <BorderPane layoutX="14.0" prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0"
                    AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <top>
                <AnchorPane prefHeight="110.0" prefWidth="999.0" styleClass="pnBackground"
                            BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </BorderPane.margin>
                    <children>
                        <Label alignment="CENTER" layoutX="434.0" layoutY="14.0" styleClass="header"
                               text="%paymentManager" AnchorPane.bottomAnchor="14.0" AnchorPane.leftAnchor="14.0"
                               AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="14.0"/>
                    </children>
                    <effect>
                        <DropShadow/>
                    </effect>
                </AnchorPane>
            </top>
            <center>
                <AnchorPane prefHeight="200.0" prefWidth="200.0" styleClass="pnBackground"
                            BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </BorderPane.margin>
                    <effect>
                        <DropShadow/>
                    </effect>
                    <children>
                        <BorderPane layoutX="14.0" layoutY="20.0" prefHeight="200.0" prefWidth="200.0"
                                    AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0"
                                    AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
                            <center>
                                <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                                    <children>
                                        <TextField fx:id="tfSearch" prefHeight="50.0" promptText="%search"
                                                   AnchorPane.leftAnchor="0.0"
                                                   AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
                                        <TableView fx:id="table" prefHeight="448.0" prefWidth="772.0"
                                                   AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                                   AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="60.0">
                                            <columns>
                                                <TableColumn fx:id="colBillID" prefWidth="150" text="%billID"/>
                                                <TableColumn fx:id="colPayID" prefWidth="180" text="%paymentID"/>
                                                <TableColumn fx:id="colMethod" prefWidth="210" text="%method"/>
                                                <TableColumn fx:id="colStatus" prefWidth="200" text="%status"/>
                                                <TableColumn fx:id="colDate" prefWidth="200" text="%date"/>
                                            </columns>
                                        </TableView>
                                    </children>
                                </AnchorPane>

                            </center>
                            <right>
                                <VBox alignment="BOTTOM_CENTER" prefHeight="448.0" prefWidth="177.0" spacing="20.0"
                                      BorderPane.alignment="CENTER">
                                    <children>
                                        <Button fx:id="btAdd" mnemonicParsing="false" prefHeight="50.0"
                                                prefWidth="140.0" text="%add"/>
                                        <Button fx:id="btRemove" mnemonicParsing="false" prefHeight="50.0"
                                                prefWidth="140.0" text="%remove"/>
                                        <Button fx:id="btEdit" mnemonicParsing="false" prefHeight="50.0"
                                                prefWidth="140.0" text="%edit"/>
                                    </children>
                                    <BorderPane.margin>
                                        <Insets/>
                                    </BorderPane.margin>
                                </VBox>
                            </right>
                        </BorderPane>
                    </children>
                </AnchorPane>
            </center>
        </BorderPane>
    </children>
</AnchorPane>
